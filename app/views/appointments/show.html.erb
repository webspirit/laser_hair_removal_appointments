<div class="col-md-8 col-sm-offset-2">
	<p id="notice"><%= notice %></p>

  <h2 class="centered">Εμφάνιση ραντεβού</h2>

	<table class="table table-striped table-bordered">
		<tbody>
      <tr>
        <th>Ονοματεπώνυμο</th>
        <td><%= link_to @appointment.client.full_name, client_path(@appointment.client), class: "link" %></td>
      </tr>

      <tr>
      	<th>Ημερομηνία</th>
      	<td><%= @appointment.date %></td>
      </tr>

      <tr>
      	<th>Σημείο</th>
      	<td><%= @appointment.try(:areas).map(&:name).join(', ') %></td>
      </tr>

      <tr>
      	<th>Τιμή</th>
      	<td><%= @appointment.price %></td>
      </tr>
      <tr>
        <th>Σημειώσεις</th>
        <td><%= @appointment.notes %></td>
      </tr>
    </tbody>
	</table>
	
	<div class="buttons centered">
		<%= link_to 'Επεξεργασία', edit_appointment_path(@appointment), class: "btn btn-warning" %>
		<%= link_to 'Διαγραφή', @appointment, method: :delete,  class: "btn btn-danger", data: { confirm: 'Προσοχή! Θέλετε να διαγράψετε το ραντεβού;' } %>
	</div>
</div>
