<div class="login_form col-md-4 col-md-offset-4">
  <h2>Σύνδεση</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, "Email" %><br />
      <%= f.email_field :email, autofocus: true, class: "col-sm-12" %>
    </div>

    <div class="field password_field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", class: "col-sm-12" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Απομνημόνευση χρήστη" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Σύνδεση", class: "col-sm-12 col-md-4 col-md-offset-4 btn btn-primary" %>
    </div>
  <% end %>
</div>